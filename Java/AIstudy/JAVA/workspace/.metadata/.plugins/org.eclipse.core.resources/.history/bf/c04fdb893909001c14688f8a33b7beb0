package day03;
class Pay{
  private String name ;
  private int bonbong;
  
  public Pay(){} 
  public Pay(String name, int bonbong) {
    this.name=name;
    this.bonbong= bonbong;
   
  }
  public void setName(String name) { // setter 에선 항상 void 사용
    this.name =name;
  }
  public String getname() {
    return name;
  }
  public void setBonbong(int bonbong) {
    this.bonbong = bonbong;
  }
  public int getBonbong() {
    return bonbong;
  }
  public int taxCalc( ) {
    return (int)(bonbong * 0.045 + 0.5); // 공통영역
  }
  public int silsuCalc() {
    return bonbong-taxCalc();
  }  
  public void printCalc() {
    System.out.println("--------------------"); 
    System.out.println("---8월 급여 내역---"); 
    System.out.println("--------------------"); 
    System.out.println("성명: " + name); 
    System.out.println("본봉: " + bonbong); 
    System.out.println("세금: " + taxCalc()); 
    System.out.println("실수령액: " + silsuCalc()); 
  }
}

class ExtraPay extends Pay{
    @Override
  public boolean equals(Object obj) {
    // TODO Auto-generated method stub
    return super.equals(obj);
  }
    @Override
  public void setName(String name) {
    // TODO Auto-generated method stub
    super.setName(name);
  }
  @Override
  public String getname() {
    // TODO Auto-generated method stub
    return super.getname();
  }
  @Override
  public void setBonbong(int bonbong) {
    // TODO Auto-generated method stub
    super.setBonbong(bonbong);
  }
  @Override
  public int getBonbong() {
    // TODO Auto-generated method stub
    return super.getBonbong();
  }
  @Override
  public int taxCalc() {
    // TODO Auto-generated method stub
    return super.taxCalc();
  }
  @Override
  public int silsuCalc() {
    // TODO Auto-generated method stub
    return super.silsuCalc();
  }
  @Override
  public void printCalc() {
    // TODO Auto-generated method stub
    super.printCalc();
  }
    private int year; //근무년수
    private int child; //자녀수
    
    ExtraPay(){}
    ExtraPay(String name, int bonong, int year, int child){
      
   
    super(name, getBonbong);{
    this.year=year;
    this.child=child;
    
    
    
    }
    public int getYear() {
      return year;
    }
    public void setYear(int year) {
      this.year = year;
    }
    public int getChild() {
      return child;
    }
    public void setChild(int child) {
      this.child = child;
    }
}

    if(year == 0){
      System.out.println("신입사원입니다.");
    }else if (year == 1){
      Pay= 200000;
      System.out.println("경력 1년 입니다.");
    }else if (year == 2){
      Pay= 400000;
    }else if(year == 3) { 
      pay = 600000; 
    }else if(year == 4) { 
      pay = 800000; 
    }else{ 
      pay =1500000; 
  } 
    if ( year >=1){ 
      if (child > 1){ 
          pay = pay + (child * 200000);
}
      return pay;
    }
}
}


public class PayCalc {

  public static void main(String[] args) {
    Pay p1 = new Pay();
    Pay p2 = new Pay();
    Pay p3 = new Pay();
    Pay p4 = new Pay("홍길동", 4000000);
    p4.printCalc();
        
    p1.setBonbong(2000000); //200만원 '.' 잦아간다는 의미
    p1.setName("왕눈이"); 
    p1.printCalc();
     
    p2.setBonbong(2500000); //250만원 
    p2.setName("아로미"); 
    p2.printCalc(); 

    p3.setBonbong(1500000); //150만원 
    p3.setName("투투"); 
    p3.printCalc();
    
    }
}

